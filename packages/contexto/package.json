{
  "name": "contexto",
  "version": "0.1.0",
  "description": "Enhanced React contexts in userland",
  "keywords": [
    "react",
    "context",
    "hooks",
    "usecontexts"
  ],
  "author": "Tommo <tommos.tools@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "compile": "run-s compile:*",
    "precompile": "mkdir -p dist/common src/targetPlatform && cp src/types/index.ts dist/common/index.d.ts",
    "precompile:dom": "cp -f src/platforms/dom/* src/targetPlatform",
    "compile:dom": "tsup --env.targetPlatform dom src/index.ts",
    "precompile:native": "cp -f src/platforms/native/* src/targetPlatform",
    "compile:native": "tsup --env.targetPlatform native src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "test": "cp src/{platforms/dom,targetPlatform}/batchedUpdates.ts && jest"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-native": "^0.71.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scheduler": "^0.23.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "yarn-run-all": "^3.1.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": "*",
    "react-native": "*",
    "scheduler": "^0.23.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "type": "module",
  "main": "./dist/dom/index.cjs",
  "module": "./dist/dom/index.js",
  "browser": "./dist/dom/index.global.js",
  "react-native": "./dist/native/index.cjs",
  "types": "./dist/common/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/common/index.d.ts",
      "module": "./dist/dom/index.js",
      "import": "./dist/dom/index.js",
      "default": "./dist/dom/index.cjs"
    }
  }
}
