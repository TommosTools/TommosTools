{
	"compilerOptions": {
		"module":				"commonjs",
		"target":				"es2015",
		"lib":					["es2017", "dom"],
		"outDir":				"./dist",
		"strict":				true,
		"declaration":			true,
		"jsx":					"react-jsx",
		"esModuleInterop":		true,
		"skipDefaultLibCheck":	true,
		"skipLibCheck":			true
	},
	"include": [
		"src/**/*"
	]
}
